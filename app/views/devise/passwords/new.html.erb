<div style="text-align: center; border: 5px solid lightgreen; margin: 50px; margin-left: 380px; margin-right: 380px;">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row" style="margin-left: 150px;">
    <%= f.label :email, class: 'col-sm-2' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-sm-5' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>