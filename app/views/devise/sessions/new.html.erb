<div style="text-align: center; border: 5px solid lightgreen; margin: 50px; margin-left: 380px; margin-right: 380px;">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group row" style="margin-left: 150px;">
    <%= f.label :email, class: 'col-sm-2' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-sm-5', placeholder: 'Email' %>
  </div>

    <div class="form-group row" style="margin-left: 150px;">
    <%= f.label :password, class: 'col-sm-2' %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>