<div style="text-align: center; border: 5px solid lightgreen; margin: 50px; margin-left: 380px; margin-right: 380px;">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group row" style="margin-left: 150px;">
    <%= f.label :name, class: 'col-sm-2' %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'col-sm-5', placeholder: "Full Name" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label :email, class: 'col-sm-2' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'col-sm-5', placeholder: "Email" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label 'Address Line 1', class: 'col-sm-2' %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'col-sm-5', placeholder: "1234 Main St." %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label 'Address Line 2', class: 'col-sm-2' %><br />
      <%= f.text_field :address2, autofocus: true, autocomplete: "address2", class: 'col-sm-5', placeholder: "Apartment, Studio or Floor" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label 'Mobile Number', class: 'col-sm-2' %><br />
      <%= f.text_field :mobile_number, autofocus: true, autocomplete: "mobile number", class: 'col-sm-5', placeholder: "Mobile No" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label 'City', class: 'col-sm-2' %><br />
      <%= f.text_field :city, autofocus: true, autocomplete: "city", class: 'col-sm-5', placeholder: "City" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label 'State', class: 'col-sm-2' %><br />
      <%= f.text_field :state, autofocus: true, autocomplete: "state", class: 'col-sm-5', placeholder: "State" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label 'Zip', class: 'col-sm-2' %><br />
      <%= f.text_field :zip, autofocus: true, autocomplete: "zip", class: 'zip', placeholder: "Zip Code" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label :password, class: 'col-sm-2' %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'col-sm-5', placeholder: "Password" %>&nbsp;&nbsp;
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label :password_confirmation, class: 'col-sm-2' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-sm-5', placeholder: "Password Confirmation" %>
    </div>

    <div class="form-group row" style="margin-left: 150px;">
      <%= f.label :avatar, class: 'col-sm-2' %><br />
      <%= f.file_field :avatar, class: 'col-sm-5' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
<% end %>
</div>

